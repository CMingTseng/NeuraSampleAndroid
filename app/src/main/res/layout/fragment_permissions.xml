<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/neura_sdk_auth_layout"
    android:background="@color/light_white">

    <ImageView
        android:id="@+id/logo_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/neura_sdk_demo_logo" />

    <com.neura.dashboard.view.widget.RobotoMediumTextView
        android:id="@+id/header"
        style="@style/neura_sdk_auth_text"
        android:layout_below="@+id/logo_image"
        android:layout_marginTop="20dp"
        android:text="@string/permissions_header"
        android:textColor="@color/grey" />

    <ListView
        android:id="@+id/permissions_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/footer"
        android:layout_below="@+id/header"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp"/>

    <com.neura.dashboard.view.widget.RobotoMediumTextView
        android:id="@+id/footer"
        style="@style/neura_sdk_auth_text"
        android:layout_alignParentBottom="true"
        android:text="@string/permissions_footer"
        android:textColor="@color/grey" />
</RelativeLayout>